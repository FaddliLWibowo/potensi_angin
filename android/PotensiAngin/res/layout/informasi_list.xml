<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2679D7"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/foto"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/txt_kecepatan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/no" />

    <TextView
        android:id="@+id/txt_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/foto"
        android:text="Waktu"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_cuaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_waktu"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_waktu"
        android:text="Cuaca"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_temperatur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_cuaca"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_cuaca"
        android:text="Temperatur"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/txt_kecepatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_temperatur"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_temperatur"
        android:text="Kecepatan Angin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>