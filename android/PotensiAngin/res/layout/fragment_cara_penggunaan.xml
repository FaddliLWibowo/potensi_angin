<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="#2679D7"
       xmlns:android="http://schemas.android.com/apk/res/android">
       <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="1. List Tempat"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            
                <TextView
                    android:id="@+id/txt_nama_penyakit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Menu List Tempat Merupakan List dari Tempat-Tempat atau Daerah yang berpotensi adanya Energi Angin"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />
            
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="2. Data History"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            
                <TextView
                    android:id="@+id/txt_desk_penyakit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Menu Data History Merupakan Data History Cuaca dari Setiap Tempat Yang Berpotensi Adanya Energi Angin"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />
            
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="3. Menu About"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            
                <TextView
                    android:id="@+id/txt_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Menu About Merupakan Menu Profile Pemuat Program"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />
            
            </LinearLayout>
            
        </ScrollView>
        
</LinearLayout>
